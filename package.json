{
  "name": "cloudpilot",
  "version": "0.0.1",
  "description": "PalmOS emulation for the web",
  "repository": "git@github.com:DirtyHairy/cloudpilot.git",
  "author": "Christian Speckner <cnspeckn@googlemail.com>",
  "license": "GPL-3.0-or-later",
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "singleQuote": true,
    "parser": "typescript"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "eslint",
      "parser": "typescript"
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "eqeqeq": "error"
    }
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-html": "^0.2.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "@rollup/plugin-typescript": "^5.0.0",
    "@types/emscripten": "^1.39.4",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "import-sort-style-eslint": "^6.0.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prettier-plugin-import-sort": "^0.0.4",
    "rollup": "^2.18.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-eslint": "^7.0.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.5"
  },
  "dependencies": {},
  "scripts": {
    "build": "rollup -c",
    "rollup-watch": "rollup -c -w",
    "launch-server": "live-server dist",
    "watch": "run-p launch-server rollup-watch"
  }
}
