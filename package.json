{
  "name": "cloudpilot",
  "version": "0.0.1",
  "description": "PalmOS emulation for the web",
  "repository": "git@github.com:DirtyHairy/cloudpilot.git",
  "author": "Christian Speckner <cnspeckn@googlemail.com>",
  "license": "GPL-3.0-or-later",
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "singleQuote": true,
    "parser": "typescript"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "eslint",
      "parser": "typescript"
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "eqeqeq": "error"
    }
  },
  "devDependencies": {
    "@emotion/core": "^10.0.28",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-html": "^0.2.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/emscripten": "^1.39.4",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "eslint": "^7.5.0",
    "eslint-plugin-react": "^7.20.3",
    "handlebars": "^4.7.6",
    "import-sort-style-eslint": "^6.0.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prettier-plugin-import-sort": "^0.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup": "^2.23.0",
    "rollup-plugin-copy": "^3.3.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.7",
    "whatwg-fetch": "^3.2.0"
  },
  "dependencies": {
    "@rollup/plugin-replace": "^2.3.3"
  },
  "scripts": {
    "lint": "eslint web/src/**/*",
    "build": "eslint web/src/**/* && rollup -c",
    "rollup-watch": "DEV=1 rollup -c -w",
    "launch-server": "live-server dist",
    "watch": "run-p launch-server rollup-watch"
  }
}
